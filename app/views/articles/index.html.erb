<div class="container">
  <div class="row valign-wrapper">
    <div class="col s10">
      <h2>List of Articles</h2>
    </div>
    <div class="col s2">
      <%= link_to 'New Article', new_article_path, class: 'btn waves-effect waves-light right' %>
    </div>
  </div>
  <div class="row">
    <table class="highlight">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.id.to_s %></td>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td>
              <%= link_to article_path(article),
                          :class => 'tooltipped',
                          :"data-tooltip" => 'Show Article',
                          :"data-position" => 'bottom' do %>
                <i class="material-icons">visibility</i>
              <% end %>
            </td>
            <td>
              <%= link_to edit_article_path(article),
                          :class => 'tooltipped',
                          :"data-tooltip" => 'Edit Article',
                          :"data-position" => 'bottom' do %>
                <i class="material-icons">edit</i>
              <% end %>
            </td>
            <td>
              <%=
                link_to article_path(article),
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        :class => 'tooltipped',
                        :"data-tooltip" => 'Delete Article',
                        :"data-position" => 'bottom' do %>
                <i class="material-icons">delete</i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
