<h2>List of Articles</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id.to_s %></td>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td>-</td>
      </tr>
    <% end %>
  </tbody>
</table>
