<div class="container">
  <div class="row">
    <h2>Editing Article <%= @article.id.to_s %></h2>
  </div>
  <div class="row">
    <%= render 'article_form' %>
  </div>
  <div class="row">
    <div class="col s8 center-align">
      <%= link_to article_path(@article),
                  :class => 'btn-floating btn-large waves-effect waves-light red tooltipped',
                  :"data-tooltip" => 'Cancel',
                  :"data-position" => 'bottom' do %>
        <i class="material-icons">close</i>
      <% end %>
    </div>
  </div>
</div>
